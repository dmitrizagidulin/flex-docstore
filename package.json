    "glob": "^7.1.2"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "dirty-chai": "^2.0.1",
    "mocha": "^5.2.0",
    "nyc": "^11.8.0",
    "sinon": "^5.0.10",
    "sinon-chai": "^3.1.0",
    "standard": "^11.0.1"
  },
  "nyc": {
